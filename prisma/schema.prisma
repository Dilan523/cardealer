generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Categorias {
  id_categoria          Int      @id @default(autoincrement())
  fecha_creacion        DateTime @default(now())
  estado                Boolean
  nombre_categoria      String
  categoria             noticias[] //conecta foranea
}
model noticias{
  id_noticia            Int      @id @default(autoincrement())
  fecha_creacion        DateTime @default(now())
  estado                Boolean
  titulo                String
  introduccion          String  
  contenido             String
  imagen                String
  categoria_id          Int
  categoria             Categorias @relation(fields: [categoria_id], references: [id_categoria])//crea foranea
}